<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table id="list">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% recipes.forEach(function(i) { %>
            <tr>
              <td><%= i.name %></td>
              <td><%= i.description %></td>
              <td><a href="/<%= i._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
</body>
</html>